{
  "openapi": "3.0.1",
  "info": {
    "title": "User Profile Picture API",
    "version": "1.0.0",
    "description": "API endpoint to upload user profile pictures"
  },
  "paths": {
    "/user/uploadProfilePic": {
      "post": {
        "summary": "Upload a profile picture",
        "description": "Allows an authenticated user to upload a profile picture.",
        "operationId": "uploadProfilePic",
        "tags": [ "User" ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "profilePicture": {
                    "type": "string",
                    "format": "binary"
                  }
                },
                "required": [ "profilePicture" ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Upload successful"
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  }
}
